<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.platzerworld.biergartenfinder.RestActivity"
    tools:showIn="@layout/activity_rest">

    <Button
        android:text="HttpClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:id="@+id/btnHttpClient" />

    <Button
        android:text="Parse XML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnURLConnection"
        android:layout_alignStart="@+id/btnHttpClient"
        android:layout_marginTop="11dp"
        android:id="@+id/btnParseXML" />

    <Button
        android:text="URL Connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btnURLConnection"
        android:layout_below="@+id/btnHttpClient"
        android:layout_alignStart="@+id/btnHttpClient" />

    <Button
        android:text="Parse JSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnParseXML"
        android:layout_alignStart="@+id/btnParseXML"
        android:layout_marginTop="8dp"
        android:id="@+id/btnParseJSON" />

    <Button
        android:text="Authenticate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnParseJSON"
        android:layout_alignStart="@+id/btnParseJSON"
        android:layout_marginTop="10dp"
        android:id="@+id/btnAuthenticate" />

    <Button
        android:text="Binary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAuthenticate"
        android:layout_alignStart="@+id/btnAuthenticate"
        android:layout_marginTop="7dp"
        android:id="@+id/btnBinary" />

    <Button
        android:text="Post Params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBinary"
        android:layout_alignStart="@+id/btnBinary"
        android:layout_marginTop="10dp"
        android:id="@+id/btnPostParams" />

    <Button
        android:text="OkHttp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnHttpClient"
        android:layout_toEndOf="@+id/btnURLConnection"
        android:layout_marginStart="66dp"
        android:id="@+id/btnOkHttp" />

    <Button
        android:text="Retrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnURLConnection"
        android:layout_alignEnd="@+id/btnOkHttp"
        android:layout_marginTop="8dp"
        android:id="@+id/btnRetrofit" />

    <Button
        android:text="Volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnParseXML"
        android:layout_alignStart="@+id/btnRetrofit"
        android:layout_marginTop="26dp"
        android:id="@+id/btnVolley" />
</RelativeLayout>
