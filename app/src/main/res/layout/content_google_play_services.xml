<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_google_play_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.platzerworld.biergartenfinder.GooglePlayServicesActivity"
    tools:showIn="@layout/activity_google_play_services">

    <Button
        android:text="basic Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBasicLocation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="RecurringLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnBasicLocation"
        android:layout_toEndOf="@+id/btnBasicLocation"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/btnRecurringLocation" />

    <Button
        android:text="Google SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBasicLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnGoogleSignIn" />

    <Button
        android:text="Google Drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoogleDrive"
        android:layout_below="@+id/btnRecurringLocation"
        android:layout_alignLeft="@+id/btnRecurringLocation"
        android:layout_alignStart="@+id/btnRecurringLocation"
        android:layout_alignRight="@+id/btnRecurringLocation"
        android:layout_alignEnd="@+id/btnRecurringLocation" />

    <Button
        android:text="Current Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGoogleSignIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnCurrentPlace" />

    <Button
        android:text="Completed Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCurrentPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnCompletedPlace" />

    <Button
        android:text="Place Picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCompletedPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnPlacePicker" />

    <Button
        android:text="GCME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGoogleDrive"
        android:layout_alignLeft="@+id/btnGoogleDrive"
        android:layout_alignStart="@+id/btnGoogleDrive"
        android:id="@+id/btnGCME" />
</RelativeLayout>
